<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:inputType="textCapWords"
        android:key="activation_choose_title"
        android:maxLines="2"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:title="@string/pref_activation_title"/>

    <EditTextPreference
        android:capitalize="words"
        android:inputType="textCapWords"
        android:key="activation_choose_instruction"
        android:maxLines="4"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:title="@string/pref_activation_instruction"/>

    <EditTextPreference
        android:capitalize="words"
        android:inputType="textCapWords"
        android:key="activation_choose_button1"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAllCaps="true"
        android:title="@string/pref_activation_primary_button"/>

    <EditTextPreference
        android:capitalize="words"
        android:inputType="textCapWords"
        android:key="activation_choose_button2"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAllCaps="true"
        android:title="@string/pref_activation_secondary_button"/>

</PreferenceScreen>
