<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:inputType="textCapWords"
        android:key="activation_email_title"
        android:maxLines="2"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:title="@string/pref_activation_title"/>

    <EditTextPreference
        android:capitalize="words"
        android:inputType="textCapWords"
        android:key="activation_email_instruction"
        android:maxLines="4"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:title="@string/pref_activation_instruction"/>

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_activation_image"
        android:key="activation_email_graphic_element"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_activation_graphic_element"/>

    <EditTextPreference
        android:key="activation_email_address"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_activation_email_address"/>

</PreferenceScreen>
